{
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 6
  },
  "extends": [
    "eslint:recommended",
    "airbnb-base",
    "modular/es6"
  ],
  "env": {
    "node":  true,
    "es6":   true
  },
  "rules": {
    "comma-dangle": 0,
    "arrow-body-style": ["error", "always"],
    "strict": [0, "global"]
  }
}